{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "noEmit": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2016",
  },
  "include": ["lib/**/*.ts", "lib/**/*.tsx", "stories/Button.stories.tsx"],
  "exclude": ["node_modules"]
}
